<div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
             <div class="section-title modal-title">
          <h2>Get in touch</h2>      
        <!-- Modal body -->
        <div class="modal-body">
               <form method="POST" action="/" onsubmit="return validation()" id="myForm">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="first_name">First Name</label>
                  <input type="text" class="form-control" id="first_name" name="first_name" required/>
                     
                </div>
                  <div class="form-group col-md-6">
                  <label for="last_name">Last Name</label>
                  <input type="text" class="form-control" id="last_name" name="last_name" required/>
                </div>
                <div class="form-group col-md-6">
                  <label for="text">Email</label>
                  <input type="text" class="form-control" name="email" id="email" required/>
                </div>
                <div class="form-group col-md-6">
                  <label for="number">Phone Number</label>
                  <input type="number" class="form-control" id="phone" name="phone" required/>
                </div>
              </div>
              {{!-- <div class="form-group">
                <label for="name">Subject</label>
                <input type="text" class="form-control" name="subject" id="subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
              </div> --}}
              <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="message" rows="10" ></textarea>
              </div>                 
                     
               <button type="reset" class="btn" >Clear</button>
               <button type="submit" id="submit" class="btn">Send</button>
               <hr>
              <div class="addNew" role="alert" id="add">
                <strong style="padding-right: 10px;" id="addNewtx"></strong>
              </div>  
              <div class="g-recaptcha" id="rcaptcha" data-sitekey="6Lcj6XQaAAAAAI0s9ja70-abMFJy-LCUOjP2S5uh"></div>
              <span id="captcha" style="float:left;color:red" />
            </form>
        </div>        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn" color="#F37970" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>